<!-- Button disabled if day passed -->

<button type="button" class="btn btn-primary recipe-list-button" data-bs-toggle="modal" data-bs-target="#addRecipeListModal">
  <i class="fas fa-plus"></i>
</button>

<!-- Button above refers to modal form below -->
<div class="modal fade" id="addRecipeListModal" tabindex="-1" aria-labelledby="addRecipeListModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addRecipeListModalLabel">Add Recipe</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="form" action="/add_recipe_list" method="post" enctype="multipart/form-data" >
          <div class="form-group">
            <!-- Title Input Field -->
            <label class="recipe-list-label">Title</label>
            <input class="form-control" type="text" name="recipeTitle" autocomplete="off">
            <!-- Description Input Field -->
            <label class="recipe-label">Description</label>
            <textarea class="form-control" name="recipeDescription" rows="3" cols="30" maxlength="200"></textarea>
            <!-- Image Input Field -->
            <label class="recipe-list-label">Image</label><br>
            <input class="form-control" type="file" name="recipeImage" accept="image/png, image/jpeg, image/jpg"><br>
            <!-- Ingredients Input Field -->
            <label class="recipe-list-label">Ingredients</label><br>
            <textarea class="form-control" name="recipeIngredients" rows="5" cols="30"></textarea>
            <!-- Instructions Input Field -->
            <label class="recipe-list-label">Instructions</label>
            <textarea class="form-control" name="recipeInstructions" rows="5" cols="30"></textarea>
            <!-- URL Input Field -->
            <label class="recipe-list-label">URL</label>
            <input class="form-control" type="text" name="recipeURL" autocomplete="off">
          </div>
          <div class="modal-footer">
            <!-- Cancel or Submit -->
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" form="form">Save Recipe</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
