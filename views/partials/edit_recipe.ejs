<button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#editRecipeModal">
  <i class="fas fa-edit"></i>
</button>

<!-- Button above refers to modal form below -->
<div class="modal fade" id="editRecipeModal" tabindex="-1" aria-labelledby="editRecipeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editRecipeModalLabel">Edit Recipe</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="form" action="/edit" method="post" enctype="multipart/form-data" >
          <div class="form-group">
            <!-- Hidden Input _id Field -->
            <input type="hidden" name="recipeId" value="<%= recipe._id %>">
            <!-- Hidden Input imageId Field -->
            <input type="hidden" name="imageId" value="<%= recipe.imageId %>">
            <!-- Title Input Field -->
            <label class="recipe-label">Title</label>
            <input class="form-control" value="<%= recipe.title %>" type="text" name="recipeTitle" autocomplete="off">
            <!-- Description Input Field -->
            <label class="recipe-label">Description</label>
            <textarea class="form-control" name="recipeDescription" rows="3" cols="30" maxlength="200"><%= recipe.description %></textarea>
            <!-- Image Input Field -->
            <label class="recipe-label">Image</label><br>
            <input class="form-control" type="file" name="recipeImage" accept="image/png, image/jpeg, image/jpg"><br>
            <!-- Ingredients Input Field -->
            <label class="recipe-label">Ingredients</label><br>
            <textarea class="form-control" name="recipeIngredients" rows="5" cols="30"><%= recipe.ingredients %></textarea>
            <!-- Instructions Input Field -->
            <label class="recipe-label">Instructions</label>
            <textarea class="form-control" name="recipeInstructions" rows="5" cols="30"><%= recipe.instructions %></textarea>
            <!-- URL Input Field -->
            <label class="recipe-label">URL</label>
            <input class="form-control" value="<%= recipe.url %>" type="text" name="recipeURL" autocomplete="off">
          </div>
          <div class="modal-footer">
            <!-- Cancel or Submit -->
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
